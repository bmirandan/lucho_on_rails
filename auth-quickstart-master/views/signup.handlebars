{{#section 'head'}}
    <link rel="stylesheet" href="/styles/auth.css">
{{/section}}

<div class="container">


	  <div id="login-page">
	  	<div class="container">
	  	
		      <form  method="POST" action="signup" class="form-login" >
		        <h2 class="form-login-heading">Create an account</h2>
                  
            
		        <div class="login-wrap">
                    

                
    
    {{#if errorMessage}}
      <div class="alert alert-danger">
        {{errorMessage}}
      </div>
    {{/if}}
    
      
      
    <label for="inputUsername" class="sr-only">Username</label><br/>
    <input type="text" id="inputUsername" name="username" class="form-control" placeholder="Username" required autofocus>
    <label for="inputPassword" class="sr-only">Password</label><br/>
    <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Password" required>
    <label for="inputPassword" class="sr-only">Repeat Password</label><br/>
    <input type="password" id="inputPassword2" name="password2" class="form-control" placeholder="Repeat Password" required> <br/>
  </form>
    <button class="btn btn-theme btn-block" type="submit">Sign up</button> <br/>
  </form>
             <div class="registration">
		               
		                <a class="" href="/">
		                    Log In
		                </a>
		            </div>
</div>
          
            
</div>
</div>
</div>
